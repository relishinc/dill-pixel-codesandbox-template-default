{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "pnpm install"
    }
  ],
  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "clean": {
      "name": "Clean",
      "command": "pnpm clean",
      "runAtStart": false
    },
    "dev": {
      "name": "Run dev server",
      "command": "pnpm dev",
      "runAtStart": true,
      "dependsOn": ["Install Dependencies"],
      "preview": {
        "port": 3000,
        "openMode": "right",
        "showConsole": true
      }
    },
    "preview": {
      "name": "Run preview server",
      "command": "pnpm preview",
      "dependsOn": ["Install Dependencies"],
      "runAtStart": false
    },
    "build": {
      "name": "Build",
      "command": "pnpm build",
      "dependsOn": ["Install Dependencies"],
      "runAtStart": false
    },
    "assets": {
      "name": "Assets",
      "command": "pnpm assets",
      "dependsOn": ["Install Dependencies"],
      "runAtStart": false
    },
    "test": {
      "name": "Test",
      "command": "pnpm test",
      "dependsOn": ["Install Dependencies"],
      "runAtStart": false
    }
  }
}
